<h1>Index ERB</h1>
<h2>Store Locator</h2>
<% @stores.each do |store| %>
<p><%= store.name %> <a href="stores/<%=store.id%>">view</a> | <a href="stores/<%=store.id%>/edit">edit</a></p>
<%end%>

<h2>Add Store:</h2>
<form action="/" method="post">
  <input style="min-width: 70%" type="text" name="store_name" class="form-control" placeholder="Store" autocomplete="off">
  <button type="submit" title="Add Store" class="btn btn-lg">Add</button>
</form>


<h2>Shoe Locator</h2>
<p>Sort by <a href="/brands">Brand</a> | <a href="/stores">Location</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Shoes</th>
      <th scope="col">Brand</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
<% @shoes.each do |shoe| %>
    <tr>
      <td><%= shoe.name %></td>

      <td><%= shoe.brand.name %></td>

      <td><%= shoe.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1>Index ERB</h1>
<h2>Store Locator</h2>
<% @stores.each do |store| %>
<p><%= store.name %> <a href="stores/<%=store.id%>">view</a> | <a href="stores/<%=store.id%>/edit">edit</a></p>
<%end%>

<h2>Add Store:</h2>
<form action="/" method="post">
  <input style="min-width: 70%" type="text" name="store_name" class="form-control" placeholder="Store" autocomplete="off">
  <button type="submit" title="Add Store" class="btn btn-lg">Add</button>
</form>


<h2>Shoe Locator</h2>
<p>Sort by <a href="/order_price">Price</a> | <a href="/">Brand</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Shoes</th>
      <th scope="col">Brand</th>
      <th scope="col">Price</th>
      <th scope="col">Edit/Delete</th>
    </tr>
  </thead>
  <tbody>
<% @shoes.each do |shoe| %>
    <tr>
      <td><%= shoe.name %></td>
      <td><a href="/brands/<%= shoe.brand.id%>/edit"><%= shoe.brand.name %></a></td>
      <td><%= shoe.price %></td>
      <td><a href="/shoes/<%= shoe.id %>">Edit</a> / <a href="/shoes/<%= shoe.id %>/delete">Delete</a></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%@brands.each do |brand|%>
<a href="/brands/<%=brand.id%>"><img src="<%= brand.img_url%>" width="150"></a>
<%end%>
